---
import { Icon } from "astro-icon/components";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Document</title>
  </head>
  <body class="bg-background text-white pb-40">
    <img
      width={64}
      height={50}
      class={"absolute z-10 hover:translate-y-0 -translate-y-4 transition-transform "}
      src="/hackclub.png"
      alt="Hack Club logo"
    />

    <div class="bg-primary h-20 rounded-br-full absolute w-[25dvw]"></div>

    <div class="w-screen h-screen backdrop-blur-3xl fixed"></div>

    <header class="sticky z-10 top-3">
      <nav class="py-5 px-10 xl:px-40 flex items-center w-full">
        <a href="/">
          <img width={64} height={50} src="/nest.svg" alt="Hack Club logo" />
        </a>
        <div class="flex items-center ml-10 lg:gap-5">
          <a href="/home" class="flex items-center gap-1 underline-slide">
            <Icon name={"lucide:home"} size={18} />
            Home
          </a>
          <a href="/docs" class="flex items-center gap-1 ml-5 underline-slide">
            <Icon name={"lucide:book"} size={18} />
            Docs
          </a>
          <a
            href="/status"
            class="flex items-center gap-1 ml-5 underline-slide"
          >
            <Icon name={"lucide:server"} size={18} />
            Status
          </a>
        </div>

        <div class="ml-auto flex gap-3">
          <a href="/login" class="btn-base btn-outline">Login</a>
          <a href="/register" class="btn-base btn-primary">Register</a>
        </div>
      </nav>
    </header>

    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=DM+Mono:wght@300;400;500;700&display=swap");

  .btn-base {
    @apply block px-2.5 py-1.5 rounded-xl;
  }

  .btn-primary {
    @apply bg-primary  text-white hover:scale-[1.05] transition-all ease-in-out duration-300;
  }
  .btn-outline {
    @apply border border-primary  text-primary hover:bg-primary hover:text-white transition-all ease-in-out duration-300 hover:scale-[1.05];
  }

  .underline-slide {
    position: relative;
  }
  .underline-slide::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 1px;
    background-color: white;
    transform: scaleX(0);
    transform-origin: 0 50%;
    transition: transform 0.3s ease;
  }

  .underline-slide:hover::after {
    transform: scaleX(1);
  }
</style>
